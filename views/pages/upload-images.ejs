                    <% }); %> -->
                  </ul>

            </div>
            <div id="selectedFilesField" class="field">
                <label for="selectedFilesTag">Kies één of meerdere bestanden:</label><br>
                <input class="file-button" type="file" name="selectedFilesTag" id="selectedFilesTag" multiple><br>
                <button class="button" type="button" id="uploadButton">Selecteer</button>
                <div class="selected-files">
