<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {tabTitle:'Katleen Lapaige'}); %>
        <link rel="stylesheet" type="text/css" href="../../../css/admin/category-editor.css">
        <link rel="icon" href="/images/logo.jpg">
</head>

<body>
    <%- include('../../preloader/preloader', { styleLink: '../../css/preloader/preloader.css' ,
        jsLink: '../../js/preloader/preloader.js' }); %>
        <header>
            <link rel="stylesheet" type="text/css" href="../../../css/partials/header.css">
            <%- include('../../partials/header', {title:categoryTitle, subtitle: false}); %>
        </header>
        <main>
            <section class="categories">
                <div class="gallery">
                    <% if(images) { images.forEach(image=> { %>
                        <div class="img-container">
                            <img src="/<%= image.img.path_resized %>"
                                data-original="/<%= image.img.path_original %>"
                                id="<%= image.title %>"
                                alt="<%= image.description %>">
                        </div>
                        <% }); } %>
                </div>
            </section>
            <section class="modal">
                <img src="" alt="" class="full-image">
                <p class="caption"></p>
            </section>
        </main>
        <footer>
            <link rel="stylesheet" href="../../../css/partials/footer.css">
            <%- include('../../partials/footer'); %>
        </footer>
        <script async src="../../js/admin/CategoryEditor.js" type="module"></script>
</body>

</html>